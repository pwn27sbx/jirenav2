<header
  class="fixed w-full z-50 bg-white/80 backdrop-blur-xl select-none transition-transform duration-300"
>
  <div class="max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center">
          <span
            class="text-xl tracking-[0.5em] font-bold uppercase text-gray-800"
            >JIRENA</span
          >
        </a>
      </div>

      <!-- Main Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a
          href="#"
          class="text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium"
          >Home</a
        >
        <a
          href="#servicios"
          class="text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium"
          >Servicios</a
        >
        <a
          href="#"
          class="text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium"
          >Acerca de Jirena</a
        >
        <a
          href="#"
          class="text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium"
          >Noticias & Historias</a
        >
      </nav>

      <div class="hidden md:flex items-center space-x-4">
        <a href="#" class="flex items-center text-gray-600 hover:text-gray-900">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-5 h-5 mr-1"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"
            ></path>
          </svg>
          <span class="text-sm font-medium">Encuentranos</span>
        </a>
      </div>

      <div class="md:hidden">
        <button
          type="button"
          class="text-gray-600 hover:text-gray-900 focus:outline-none"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

<style>
  header {
    transform: translateY(0);
  }

  header.nav-hidden {
    transform: translateY(-100%);
  }
</style>

<script>
  let lastScrollY = window.scrollY;
  const header = document.querySelector("header");

  const handleScroll = () => {
    const currentScrollY = window.scrollY;

    // Only trigger after scrolling 5px to avoid micro-movements
    if (Math.abs(currentScrollY - lastScrollY) < 5) return;

    if (currentScrollY > lastScrollY) {
      // Scrolling down
      header?.classList.add("nav-hidden");
    } else {
      // Scrolling up
      header?.classList.remove("nav-hidden");
    }

    lastScrollY = currentScrollY;
  };

  window.addEventListener("scroll", handleScroll, { passive: true });
</script>
