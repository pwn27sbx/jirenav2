<section
  id="servicios"
  class="w-full h-[80vh] flex flex-col items-center justify-center p-4 sm:p-8 md:p-20 bg-white/20 backdrop-blur-xl text-white relative select-none overflow-x-visible"
>
  <div
    class="w-full grid grid-cols-1 md:grid-cols-5 gap-0 md:gap-4 overflow-visible"
  >
    <div class="md:row-span-4">
      <h1
        class="text-4xl sm:text-5xl md:text-7xl font-bold text-slate-800 text-center md:text-left md:ml-10 flex items-center justify-center md:justify-start h-full mb-8 md:mb-0"
      >
        Te ofrecemos...
      </h1>
    </div>
    <div
      class="md:col-span-4 md:row-span-4 w-full overflow-visible md:-mr-72 mt-8 md:mt-0 services-container"
    >
      <div
        class="flex flex-col md:flex-row items-center relative md:translate-x-56 px-4 md:px-0 gap-0 md:gap-0 overflow-visible"
      >
        <div
          class="w-full md:w-[360px] min-h-fit md:h-[550px] p-6 relative overflow-hidden group flex flex-col justify-center items-center section glass-effect card transform"
          data-hover="El mango es muy rico"
        >
          <div class="light-effect absolute inset-0 pointer-events-none"></div>
          <h2
            class="text-2xl md:text-3xl font-bold mb-3 text-slate-700 relative text-center z-10 section-title"
          >
            Transporte de carga y mercancia
          </h2>
          <p
            class="text-base md:text-lg text-slate-700 relative text-center z-10 section-text"
          >
            Carga Ligera, Pesada y Sobre-dimensionada
          </p>
        </div>
        <div
          class="w-full md:w-[360px] min-h-fit md:h-[550px] p-6 relative overflow-hidden group flex flex-col justify-center items-center section glass-effect card transform"
          data-hover="El mango es muy rico"
        >
          <div class="light-effect absolute inset-0 pointer-events-none"></div>
          <h2
            class="text-2xl md:text-3xl font-bold mb-3 text-slate-700 relative text-center z-10 section-title"
          >
            Servicios express
          </h2>
          <p
            class="text-base md:text-lg text-slate-700 relative text-center z-10 section-text"
          >
            Envío y entrega de sobres, documentos, paquetes en Arequipa, Lima,
            Moquegua y Cusco
          </p>
        </div>
        <div
          class="w-full md:w-[360px] min-h-fit md:h-[550px] p-6 relative overflow-hidden group flex flex-col justify-center items-center section glass-effect card transform"
          data-hover="El mango es muy rico"
        >
          <div class="light-effect absolute inset-0 pointer-events-none"></div>
          <h2
            class="text-2xl md:text-3xl font-bold mb-3 text-slate-700 relative text-center z-10 section-title"
          >
            Alquiler de almacenes y montacargas
          </h2>
          <p
            class="text-base md:text-lg text-slate-700 relative text-center z-10 section-text"
          >
            Tenemos moderna infraestructura
          </p>
        </div>
        <div
          class="w-full md:w-[360px] min-h-fit md:h-[550px] p-6 relative overflow-hidden group flex flex-col justify-center items-center section glass-effect card transform"
          data-hover="El mango es muy rico"
        >
          <div class="light-effect absolute inset-0 pointer-events-none"></div>
          <h2
            class="text-2xl md:text-3xl font-bold text-slate-700 absolute left-1/2 md:left-12 bottom-1/2 md:bottom-12 z-10 section-title transform -translate-x-1/2 md:translate-x-0 translate-y-1/2 md:translate-y-0 text-center md:text-left"
          >
            <span class="hidden md:block">Mucho</span>
            <span class="hidden md:block">mas</span>
            <span class="md:hidden">Mucho mas</span>
          </h2>
        </div>
      </div>
      <div id="glow"></div>
    </div>
  </div>
</section>

<style>
  .glass-effect {
    background: rgba(125, 125, 125, 0.1);
    border: 1px solid rgba(135, 135, 135, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    @media (min-width: 768px) {
      transform: skew(-12deg);
      -webkit-transform: skew(-12deg); /* Soporte para Safari */
    }
  }

  .glass-effect:hover {
    border-color: rgba(200, 200, 200, 0.27);
    z-index: 20;
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    @media (min-width: 768px) {
      transform: scale(1.1) skew(-12deg);
      -webkit-transform: scale(1.1) skew(-12deg); /* Soporte para Safari */
    }
    @media (max-width: 767px) {
      transform: scale(1.05);
      -webkit-transform: scale(1.05); /* Soporte para Safari */
    }
  }

  #glow {
    position: absolute;
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      rgba(214, 177, 12, 0.14) 0%,
      rgba(0, 255, 0, 0) 70%
    );
    border-radius: 50%;
    pointer-events: none;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%); /* Soporte para Safari */
    z-index: 5;
    display: none;
  }

  #servicios {
    position: relative;
    overflow: hidden;
  }

  .services-container {
    margin-top: 2rem; /* Restaurar margen superior */
  }
  @media (max-width: 768px) {
    .services-container {
      margin-bottom: 3rem; /* Margen inferior en móviles */
    }
  }
</style>

<script>
  const cardsElement = document.getElementById("servicios");

  if (cardsElement) {
    cardsElement.addEventListener("mousemove", (event) => {
      const glow = document.getElementById("glow");
      if (glow) {
        glow.style.display = "block";
        glow.style.left = `${event.clientX - (event.currentTarget as HTMLElement).getBoundingClientRect().left}px`;
        glow.style.top = `${event.clientY - (event.currentTarget as HTMLElement).getBoundingClientRect().top}px`;
      }
    });
  }

  if (cardsElement) {
    cardsElement.addEventListener("mouseleave", () => {
      const glow = document.getElementById("glow");
      if (glow) {
        glow.style.display = "none";
      }
    });
  }
</script>
